<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/advisorRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/advisorProPic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/hotel_sample" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/advisorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KJDKJDK"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/contact_ic_new"/>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/advisorsEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KdfdfgJDKJDK" />
                </LinearLayout>



               <LinearLayout
                   android:padding="5dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ex_ic_new"/>

                   <TextView
                       android:layout_marginLeft="5dp"
                       android:id="@+id/advisorExperience"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="KdfdfgJDKJDK" />

               </LinearLayout>



            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


</LinearLayout>